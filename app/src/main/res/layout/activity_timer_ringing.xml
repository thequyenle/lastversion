<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - Full screen with centerCrop -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Timer Bell Icon -->
    <ImageView
        android:id="@+id/ivTimerIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_ringbel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="210dp" />

    <!-- "Time's Up" Title -->
    <TextView
        android:id="@+id/tvTimesUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_s_up"
        android:textColor="#2C3E50"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/ivTimerIcon"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Timer Duration Subtitle -->
    <TextView
        android:id="@+id/tvTimesUpSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five_minutes_0_seconds"
        android:textColor="#5A6C7D"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tvTimesUpTitle"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stop Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStopTimesUp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/stop_"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="16sp"
        android:backgroundTint="@null"
        app:backgroundTint="#76E0C1"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimesUpSubtitle"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>