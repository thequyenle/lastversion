<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - Hidden by default, shown when Time's Up -->
    <ImageView
        android:id="@+id/imgTimerBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/bg_preview" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timerRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timer_"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="57dp" />

            <!-- ========== STATE 1: PICKERS ========== -->
            <LinearLayout
                android:id="@+id/layoutPickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <!-- Time Pickers -->
                <LinearLayout
                    android:layout_marginTop="88dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/npHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@android:color/transparent"
                        app:np_selectedTextSize="40sp"
                        app:np_textSize="24sp"
                        app:np_itemSpacing="-18dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/h"
                        android:textSize="24sp"
                        android:textColor="#A1A1A1"/>

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/npMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@android:color/transparent"
                        app:np_selectedTextSize="40sp"

                        app:np_textSize="24sp"
                        app:np_itemSpacing="-18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m"
                        android:textSize="24sp"
                        android:textColor="#A1A1A1"/>

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/npSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@android:color/transparent"
                        app:np_selectedTextSize="40sp"
                        app:np_textSize="24sp"
                        app:np_itemSpacing="-18dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/s"
                        android:textSize="24sp"
                        android:textColor="#A1A1A1"/>
                </LinearLayout>

                <!-- Start Timer Button -->
                <Button
                    android:id="@+id/btnStartTimer"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/start_timer"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#76E0C1"
                    app:cornerRadius="24dp"
                    android:textColor="#FFFFFF" />

                <!-- Keep Screen On -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_my_screen_on"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <ImageView
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/switchKeepScreen"
                        android:layout_width="56dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_switch_off" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Sound Picker -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/layoutSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/soundTimer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvSoundValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/astro"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- ========== STATE 2: RUNNING ========== -->
            <LinearLayout
                android:id="@+id/layoutRunning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="32dp">

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp">

                    <net.android.lastversion.view.CircleCountdownView
                        android:id="@+id/progressRing"
                        android:layout_width="300dp"
                        android:layout_height="300dp" />

                    <LinearLayout
                        android:id="@+id/layoutTimerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Hours -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hoursTimer"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvRH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textStyle="bold"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <!-- Minutes -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minutesS"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvRM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textStyle="bold"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <!-- Seconds -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/secondsS"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvRS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textStyle="bold"
                                android:textSize="22sp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stopTimer"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#76E0C1"
                    app:cornerRadius="24dp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnRestart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/restartT"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#D8F6F0"
                    app:cornerRadius="24dp"
                    android:textColor="#555555" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>