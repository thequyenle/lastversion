<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_rounded_gray_alarm_item"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarmItem"
            android:textColor="#797979"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_08_00_am"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>



        <TextView
            android:id="@+id/tvActiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mon_tue_wed_thu_fri"
            android:textSize="14sp"
            android:textColor="#252525"
            android:layout_marginTop="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="3dp"
            android:layout_height="13dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/ic_3cham" />

        <ImageView
            android:id="@+id/switchAlarm"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_switch_on" />
    </LinearLayout>
</LinearLayout>



